#!/bin/bash

BASH_IT_DIR="${HOME}/.bash_it"

declare -a aliases=(
	"bash-it"
	"bundler"
	"clipboard"
	"fuck"
	"general"
	"git"
	"node"
)

declare -a completions=(
	"aliases"
	"awscli"
	"bash-it"
	"bundler"
	"cargo"
	"darts"
	"default"
	"dirs"
	"django"
	"docker-compose"
	"docker"
	"gem"
	"git_flow"
	"git"
	"github-cli"
	"go"
	"gradle"
	"kubectl"
	"laravel"
	"makefile"
	"maven"
	"notify-send"
	"npm"
	"pip"
	"pip3"
	"projects"
	"rustup"
	"ssh"
	"terraform"
	"tmux"
	"travis"
)

declare -a plugins=(
	"alias-completion"
	"aws"
	"base"
	"battery"
	"browser"
	"colors"
	"dirs"
	"docker-compose"
	"docker"
	"git-subrepo"
	"git"
	"gitstatus"
	"go"
	"goenv"
	"gradle"
	"history-eternal"
	"history-search"
	"history-substring-search"
	"history"
	"github-cli"
	"java"
	"javascript"
	"jekyll"
	"man"
	"nginx"
	"virtualenv"
	"xterm"
)

export BASH_IT="${HOME}/.bash_it"
export BASH_IT_AUTOMATIC_RELOAD_AFTER_CONFIG_CHANGE=0
source "${BASH_IT_DIR}"/bash_it.sh

for entry in "${aliases[@]}"; do
	_enable-alias "$entry" &> /dev/null
done
for entry in "${completions[@]}"; do
	_enable-completion "$entry" &> /dev/null
done
for entry in "${plugins[@]}"; do
	_enable-plugin "$entry" &> /dev/null
done
